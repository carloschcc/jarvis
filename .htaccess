# AD Manager - Configurações Apache
# Sistema de Gestão de Usuários Active Directory

# Habilitar rewrite engine
RewriteEngine On

# Segurança - Bloquear acesso a arquivos sensíveis
<Files "*.json">
    Deny from all
</Files>

<FilesMatch "\.(log|ini)$">
    Deny from all
</FilesMatch>

# Bloquear acesso aos diretórios de configuração e storage
RewriteRule ^(config|storage|models|controllers)/ - [F,L]

# Bloquear acesso a arquivos de sistema
<Files ~ "^\.">
    Order allow,deny
    Deny from all
</Files>

# Headers de segurança
<IfModule mod_headers.c>
    # Prevenir XSS
    Header always set X-Content-Type-Options nosniff
    Header always set X-Frame-Options DENY
    Header always set X-XSS-Protection "1; mode=block"
    Header always set Referrer-Policy "strict-origin-when-cross-origin"
    
    # Segurança HTTPS (descomente se usar HTTPS)
    # Header always set Strict-Transport-Security "max-age=31536000; includeSubDomains"
    
    # Cache para assets estáticos
    <FilesMatch "\.(css|js|png|jpg|jpeg|gif|ico|svg|woff|woff2|ttf|eot)$">
        Header set Cache-Control "max-age=31536000, public"
    </FilesMatch>
</IfModule>

# Configurações PHP
<IfModule mod_php7.c>
    php_flag display_errors Off
    php_flag log_errors On
    php_value error_log "storage/logs/php_errors.log"
    php_value max_execution_time 120
    php_value memory_limit 256M
    php_value upload_max_filesize 10M
    php_value post_max_size 10M
    php_flag session.cookie_httponly On
    php_flag session.cookie_secure Off
    php_value session.gc_maxlifetime 3600
</IfModule>

<IfModule mod_php8.c>
    php_flag display_errors Off
    php_flag log_errors On
    php_value error_log "storage/logs/php_errors.log"
    php_value max_execution_time 120
    php_value memory_limit 256M
    php_value upload_max_filesize 10M
    php_value post_max_size 10M
    php_flag session.cookie_httponly On
    php_flag session.cookie_secure Off
    php_value session.gc_maxlifetime 3600
</IfModule>

# Página de erro customizada
ErrorDocument 404 /index.php?page=error&code=404
ErrorDocument 403 /index.php?page=error&code=403
ErrorDocument 500 /index.php?page=error&code=500

# Compressão GZIP
<IfModule mod_deflate.c>
    AddOutputFilterByType DEFLATE text/plain
    AddOutputFilterByType DEFLATE text/html
    AddOutputFilterByType DEFLATE text/xml
    AddOutputFilterByType DEFLATE text/css
    AddOutputFilterByType DEFLATE application/xml
    AddOutputFilterByType DEFLATE application/xhtml+xml
    AddOutputFilterByType DEFLATE application/rss+xml
    AddOutputFilterByType DEFLATE application/javascript
    AddOutputFilterByType DEFLATE application/x-javascript
</IfModule>

