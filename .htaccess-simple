# AD Manager - .htaccess Simples para XAMPP
# Use este arquivo se o .htaccess normal der problemas

# Habilitar rewrite (se disponível)
RewriteEngine On

# Configurações PHP básicas
<IfModule mod_php7.c>
    php_flag display_errors On
    php_flag log_errors On
    php_value max_execution_time 120
    php_value memory_limit 256M
</IfModule>

<IfModule mod_php8.c>
    php_flag display_errors On
    php_flag log_errors On
    php_value max_execution_time 120
    php_value memory_limit 256M
</IfModule>

# Bloquear apenas arquivos críticos
<Files "*.json">
    Deny from all
</Files>

<Files "*.log">
    Deny from all
</Files>